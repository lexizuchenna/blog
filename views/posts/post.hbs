<main class="__post">
  <div class="__container">
    <h2 class="post__title" id="post-title">{{post.title}}</h2>
    <div class="post__header __flex">
      <div class="category__date">
        <data role="category" class="category"><a
            href="/posts/category?category={{post.category}}"
          >{{post.category}}</a></data>
        <data role="date" class="date">{{formatDate post.createdAt}}</data>
      </div>
      <div class="__user">
        <a href="/posts/{{post.username}}">
          <img src="/images/user.svg" alt="" />
          <span>{{post.author}}</span>
        </a>
      </div>
    </div>
    <div class="post__image">
      <img src="{{imageSrc post.image.contentType post.image.data}}" alt="{{post.title}}" />
    </div>
    <div class="post__body">
      {{{post.post}}}
    </div>
  </div>
</main>

<div class="inline__posts">
  <div class="__container">
    <div class="section__heading">
      <h3>Related Posts</h3>
    </div>
    <div class="__flex">
      {{#if relatedPosts}}
      {{#each relatedPosts}}
      <article class="small__post">
        <div class="small__image__container">
          <a href="" class="image__link">
            <figure class="small__image">
              <img
                src="{{imageSrc this.image.contentType this.image.data}}"
                alt="{{this.title}}"
              />
            </figure>
          </a>
        </div>

        <div class="category__date">
          <data role="category" class="category">
            <a
              href="/posts/category?category={{this.category}}"
            >{{this.category}}</a>
          </data>
          <data role="date" class="date">{{formatDate this.createdAt}}</data>
        </div>
        <div class="article__title">
           <h2>
              <a href="/posts/{{this.username}}/{{this.link}}">{{this.title}}</a>
            </h2>
          <div class="__user">
            <a href="href=/posts/{{this.username}}">
              <img src="/images/user.svg" alt="{{this.title}}" />
              <span>{{this.author}}</span>
            </a>
          </div>
        </div>
      </article>
      {{/each}}
