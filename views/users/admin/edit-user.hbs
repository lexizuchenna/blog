{{> _toast-header}}

<main class="__post __contact">
  <div class="__container __flex">
    <h2 class="post__title">Register a Writer</h2>
    <div class="contact__form">
      <form action="/users/admin/edit-user" method="POST">
        <div class="contact__form__group">
          <input type="text" style="display: none;" name="id" value="{{editUser._id}}" />
        </div>
        <div class="contact__form__group">
          <input type="text" placeholder="Enter username" name="username" value="{{editUser.username}}" />
        </div>
        <div class="contact__form__group">
          <input type="text" placeholder="Enter name" name="name" value="{{editUser.name}}"/>
        </div>
        <div class="contact__form__group">
          <input type="email" placeholder="Enter email" name="email" value="{{editUser.email}}" />
        </div>
        <div class="contact__form__group">
         <select name="role">
           <option value="select role">Select Role</option>
           <option value="writer">Writer</option>
           <option value="admin">Admin</option>
         </select>
        </div>
        <div class="contact__form__group">
          <input type="password" placeholder="Enter password" name="password" />
        </div>
        <div class="contact__form__group">
          <input
            type="password"
            placeholder="Confirm password"
            name="password2"
          />
        </div>
        <button type="submit">Update</button>
      </form>
    </div>
  </div>
</main>

{{>_footer}}

<script>
  document.title = 'CodeBlog | Edit User';
</script>

{{> _toast-footer}}