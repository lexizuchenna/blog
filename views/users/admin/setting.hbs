<header class="">
  <div class="__container">
    <div class="__flex bottom__links __bottom_line">
      <nav class="__flex">
        <ul>
          <li>
            <a href="/users/admin/dashboard" class="nav__links">Dashboard</a>
          </li>
          <li>
            <a href="/users/admin/register-user" class="nav__links">Register
              User</a>
          </li>
          <li>
            <a href="/users/admin/create" class="nav__links">Create Post</a>
          </li>
        </ul>
      </nav>
      <div class="menu__btn">
        <div class="__closed closed__btn" id="closed">
          <img src="/images/closed.svg" alt="" />
        </div>
        <div class="__open open__btn" id="open">
          <img src="/images/open.svg" alt="" />
        </div>
      </div>
      <div class="mobile__nav _closed" id="mobile-nav">
        <ul>
          <li>
            <a href="/users/admin/dashboard" class="nav__links">Dashboard</a>
          </li>
          <li>
            <a
              href="/users/admin/register-user"
              class="nav__links active"
            >Register User</a>
          </li>
          <li>
            <a href="/users/admin/create" class="nav__links">Create Post</a>
          </li>
        </ul>
      </div>
      <div class="user__actions">
        <div class="__flex">
          <ul>
            <li><a
                href="/users/admin/setting"
                class="nav__links active"
              >Admin</a></li>
            <li><a href="/users/logout" class="nav__links">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<main class="__post __contact">
  <div class="__container __flex">
    <h2 class="post__title">Setting</h2>
    <div class="contact__form">
      <h2>Profile</h2>
      <form action="">
        <div class="contact__form__group">
          <input
            type="text"
            readonly
            placeholder="Enter username"
            name="username"
          />
        </div>
        <div class="contact__form__group">
          <input type="text" placeholder="Enter name" name="name" />
        </div>
        <div class="contact__form__group">
          <input type="email" placeholder="Enter email" name="email" />
        </div>
        <div class="contact__form__group">
          <input type="password" placeholder="Enter password" name="password" />
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>
    <div class="contact__form">
      <h2>Change Password</h2>
      <form action="">
        <div class="contact__form__group">
          <input type="password" placeholder="Enter password" name="password" />
        </div>
        <div class="contact__form__group">
          <input
            type="password"
            placeholder="Confirm password"
            name="password2"
          />
        </div>
        <button type="submit">Change</button>
      </form>
    </div>
  </div>
</main>

{{>_footer}}

